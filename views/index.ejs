<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stock Adviser</title>
    <!-- RUM agent script -->
    <script src="https://cdn.jsdelivr.net/npm/@elastic/apm-rum@latest/dist/bundles/elastic-apm-rum.umd.min.js" crossorigin></script>
    <!-- Initialize the RUM agent -->
    <script>
        elasticApm.init({
            serviceName: 'stock-adviser',
            serverUrl: 'https://4769643cf26448ed8e6887b301a5ddd9.apm.us-central1.gcp.cloud.es.io:443',
            serviceVersion: '1.0'
        });
    </script>
    <style>
        /* Enhanced Styling */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f9fc;
        }

        header {
            background: #2c3e50;
            color: #ecf0f1;
            padding: 1em 0;
            text-align: center;
        }

        nav {
            display: flex;
            justify-content: center;
            background-color: #34495e;
            padding: 1em;
        }

        nav a {
            color: #ecf0f1;
            padding: 0 15px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        nav a:hover {
            background-color: #ecf0f1;
            color: #34495e;
        }

        .container {
            padding: 2em;
            background-color: #fff;
            margin: 1em auto;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 800px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px 12px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .social-links {
            display: flex;
            justify-content: center;
            padding: 1em;
        }

        .social-links a {
            margin: 0 10px;
            transition: color 0.3s;
        }

        .social-links a:hover {
            color: #3498db;
        }
    </style>
</head>

<body>
    <header>
        <h1>Stock Adviser</h1>
    </header>
    <nav>
        <a href="#contacts">Contacts</a>
        <a href="#subscription">Subscription</a>
        <a href="#education">Education</a>
    </nav>
    <div class="container">
        <section id="stocks">
            <h2>USA Stock Prices</h2>
            <table>
                <thead>
                    <tr>
                        <th>Stock</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    <% stocks.forEach(stock => { %>
                        <% if (!stock.name.includes('.BSE')) { %>
                            <tr>
                                <td><%= stock.name %></td>
                                <td>$<%= stock.price || "Data not available" %></td>
                            </tr>
                        <% } %>
                    <% }); %>
                </tbody>
            </table>

            <h2>India Stock Prices</h2>
            <table>
                <thead>
                    <tr>
                        <th>Stock</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    <% stocks.forEach(stock => { %>
                        <% if (stock.name.includes('.BSE')) { %>
                            <tr>
                                <td><%= stock.name %></td>
                                <td>â‚¹<%= stock.price || "Data not available" %></td>
                            </tr>
                        <% } %>
                    <% }); %>
                </tbody>
            </table>
        </section>
        <section id="contacts">
            <!-- Add your contacts information here -->
        </section>
        <section id="subscription">
            <!-- Add your subscription form here -->
        </section>
        <section id="education">
            <!-- Add your education information here -->
        </section>
    </div>
    <div class="social-links">
        <a href="https://www.facebook.com" target="_blank">Facebook</a>
        <a href="https://www.instagram.com" target="_blank">Instagram</a>
        <!-- Add other social media links as needed -->
    </div>
</body>

</html>

